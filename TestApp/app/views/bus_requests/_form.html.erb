<%= stylesheet_link_tag    "contact", media: "screen" %>
<%= form_for(@bus_request) do |f| %>
  <% if @bus_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bus_request.errors.count, "error") %> prohibited this request from being submitted:</h2>

      <ul>
      <% @bus_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <br>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p class = "custom_text_field">
    <%= f.label :bus_email, 'Email Address:' %>
    <%= f.text_field :bus_email %><br>

    <%= f.label :number_of_seats, 'Number of Seats:' %>
    <%= f.number_field :number_of_seats, value: "1", min: 1 %><br>


    <%= f.label :names, 'Name(s):' %><br>
    <%= f.text_area :names, cols: 40, rows: 6 %>

    <p2 class = "bus_confirm"><br>
    <%= f.submit 'Submit Request' %>
    </p2>
  </p>
<% end %>
